<h2><%= trn_geth('TITLE_DOOR_PANEL_LIST') %></h2>

<%= link_to trn_geth('BUTTON_ADD'), new_door_panel_path %>
<table cellspacing="0">
  <tr class="header">
    <th><%= trn_geth('HEADER_NAME') %></th>
    <th><%= trn_geth('HEADER_PREVIEW') %></th>
    <th></th>
  </tr>
<% for door_panel in @door_panels %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= door_panel.tr_name %></td>
    <td>
      <% unless door_panel.preview_image_name.blank? %>
        <%= image_tag 'door_panels/' + door_panel.preview_image_name %>
      <% end %>
    </td>
    <td>
      <%= link_to trn_geth('BUTTON_EDIT'), edit_door_panel_path(door_panel) %> |
      <%= link_to trn_geth('BUTTON_DELETE'), door_panel_path(door_panel), :confirm => trn_geth('LABEL_DELETE_QUESTION'), :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

